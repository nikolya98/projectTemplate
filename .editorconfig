root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
curly_bracket_next_line = false
spaces_around_operators = true

[*.py]
indent_style = space
indent_size = 4
continuation_indent_size = 4

# no space indentation and newlines ending every minified files
[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore

[*.{js,py}]
quote_type = single

[*.{html,css,scss}]
quote_type = double

[*.bat]
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false
